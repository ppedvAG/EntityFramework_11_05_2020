<Window x:Class="ppedv.LVS_Enterprise.UI.WPFCore.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ppedv.LVS_Enterprise.UI.WPFCore"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <DockPanel >
        <WrapPanel DockPanel.Dock="Top" Margin="12">
            <Button Click="Laden">Laden</Button>
            <Button Click="Speicher">Speichern</Button>
            <Button Click="Neu">Neu</Button>
            <Button Click="Delete">Löschen</Button>
        </WrapPanel>
        <DataGrid Name="myGrid"/>
    </DockPanel>
</Window>
